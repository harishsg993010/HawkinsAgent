modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Simple Agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Multi Agent Flow"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test LLM Models"

[[workflows.workflow.tasks]]
