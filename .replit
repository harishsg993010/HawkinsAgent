modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Simple Agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Multi Agent Flow"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test LLM Models"

[[workflows.workflow]]
name = "Run Simple Agent"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python examples/simple_agent.py"

[[workflows.workflow]]
name = "Run Multi Agent Flow"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python examples/multi_agent_flow.py"

[[workflows.workflow]]
name = "Test LLM Models"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python examples/model_test.py"

[deployment]
run = ["sh", "-c", "python examples/simple_agent.py"]

[[ports]]
localPort = 5000
externalPort = 80
