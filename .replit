[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Trip Planner"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Documentation Check"

[[workflows.workflow]]
name = "Run Simple Agent"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
